<div class="row">
  <div class="col-md-12">
    <h2>Courses</h2>
    <hr />
    {{#if courses.length}}
      <table>
        <thead>
          <tr>
            <th>Course Code</th>
            <th>Course Description</th>
          </tr>
        </thead>
        <tbody>
          {{#each courses}}
            <tr>
              <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
              <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <p>No courses found.</p>
    {{/if}}
  </div>
</div>
